button(class=['btn', 'btn-default'] data-toggle='modal', data-target='#createPlantModal') Add a new plant

#createPlantModal(class=['modal', 'fade'], tabinex='-1', role='dialog', aria-labelledby='createPlantModalLabel')
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title Add a new plant
      .modal-body
        form(id='createForm', action='/plant/create', method='POST')
          .form-group
            label Name
            input.form-control(type='text', name='name')
          .form-group
            label Specie
            input.form-control(type='text', name='specie')
      .modal-footer
        button(id='createSubmit', type='submit', class=['btn btn-primary']) Add
        button(type='button', class=['btn btn-default'], data-dismiss='modal') Cancel


append script
  script.
    $(document).ready(function() {
      $('#createSubmit').click(function() {
          $('#createForm').submit();
      });
    });
